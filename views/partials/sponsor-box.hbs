
<div class="modal fade pacnem-sponsor-modal" style="display: none;" data-sponsor="{{slug}}">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">{{sponsorName}}</h4>
            </div>
            <div class="modal-body">
                <p class="text-center">
                    {{#if content.isImage}}
                        <img src="{{content.url}}" alt="{{sponsorName}}" title="{{sponsorName}}" />
                    {{/if}}

                    {{#if content.isVideo}}
                        <video class="video-stream" x-webkit-airplay="allow"
                            src="{{content.url}}"></video>
                    {{/if}}
                </p>
                <p class="text-left">{{description}}</p>
                <p class="text-left"><a href="{{websiteUrl}}" target="_blank">{{t "sponsors.link_to_website"}}&nbsp;{{sponsorName}}</a></p>
            </div>
            <div class="modal-footer">
                <div class="row text-center">
                    <button id="pacnem-sponsor-close-trigger" class="btn btn-default" data-remaining="11" role="button">
                        <span>{{t "sponsors.button_closing_in"}}</span>&nbsp;
                        <span class="seconds">11</span>&nbsp;
                        <span>{{t "sponsors.seconds_suffix"}}</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
