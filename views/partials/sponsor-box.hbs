
<div class="modal fade pacnem-sponsor-modal" style="display: none; z-index: 9999;" data-sponsor="{{sponsor.slug}}">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">{{sponsor.sponsorName}}</h4>
            </div>
            <div class="modal-body">
                <p class="text-center">
                    {{#if content.isImage}}
                        <img src="{{content.url}}" 
                             alt="{{sponsor.sponsorName}}" 
                             title="{{sponsor.sponsorName}}"
                             class="sponsor-content" />
                    {{/if}}

                    {{#if content.isVideo}}
                        <video class="video-stream" 
                               x-webkit-airplay="allow"
                               src="{{content.url}}"
                               class="sponsor-content"></video>
                    {{/if}}
                </p>
                <p class="text-left">{{sponsor.description}}</p>
                <p class="text-left"><a href="{{sponsor.websiteUrl}}" target="_blank">{{t "sponsors.link_to_website"}}&nbsp;{{sponsor.sponsorName}}</a></p>
            </div>
            <div class="modal-footer">
                <div class="row text-center">
                    <button id="pacnem-sponsor-close-trigger" class="btn btn-default" data-remaining="11" role="button">
                        <span>{{t "sponsors.button_closing_in"}}</span>&nbsp;
                        <span class="seconds">11</span>&nbsp;
                        <span>{{t "sponsors.seconds_suffix"}}</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
