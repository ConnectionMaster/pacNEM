<script id="sponsor-registration-form" type="text/x-handlebars-template">
    <div class="user-form form">
        <form action="/sponsor" method="POST">
        <div class="row form-group">
            <label class="col-md-3 text-right">{{t "sponsor_engine.label_realname"}} (*)</label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon" id="describe-realname"><span class="glyphicon glyphicon-user"></span></span>
                    <input name="realname" type="text" class="form-control" placeholder="{{t "forms.realname_placeholder"}}" aria-describedby="describe-realname" maxlength="30" />
                </div>
            </div>
            {{#if errors.realname}}
            <div class="col-md-3 error-block realname-error text-danger">
                <span class="glyphicon glyphicon-remove-circle"></span>&nbsp;
                <span class="error">{{errors.realname}}</span>
            </div>
            {{/if}}
        </div>
        <div class="row form-group">
            <label class="col-md-3 text-right">{{t "sponsor_engine.label_email"}} (*)</label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon" id="describe-email"><span class="glyphicon glyphicon-envelope"></span></span>
                    <input name="email" type="text" class="form-control" placeholder="{{t "forms.email_placeholder"}}" aria-describedby="describe-email" maxlength="50" />
                </div>
            </div>
            {{#if errors.email}}
            <div class="col-md-3 error-block email-error text-danger">
                <span class="glyphicon glyphicon-remove-circle"></span>&nbsp;
                <span class="error">{{errors.email}}</span>
            </div>
            {{/if}}
        </div>
        <div class="row form-group">
            <label class="col-md-3 text-right">{{t "sponsor_engine.label_sponsorname"}} (*)</label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon" id="describe-sponsorname"><span class="glyphicon glyphicon-bullhorn"></span></span>
                    <input name="sponsorname" type="text" class="form-control" placeholder="{{t "forms.sponsorname_placeholder"}}" aria-describedby="describe-sponsorname" maxlength="30" />
                </div>
            </div>
            {{#if errors.sponsorname}}
            <div class="col-md-3 error-block sponsorname-error text-danger">
                <span class="glyphicon glyphicon-remove-circle"></span>&nbsp;
                <span class="error">{{errors.sponsorname}}</span>
            </div>
            {{/if}}
        </div>
        <div class="row form-group">
            <label class="col-md-3">{{t "sponsor_engine.label_url"}}</label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon" id="describe-url"><span class="glyphicon glyphicon-globe"></span></span>
                    <input name="url" type="text" class="form-control" placeholder="{{t "forms.url_placeholder"}}" aria-describedby="describe-url" maxlength="40" />
                </div>
            </div>
        </div>
        <div class="row form-group">
            <label class="col-md-3 text-right">{{t "sponsor_engine.label_description"}} (*)</label>
            <div class="col-md-6">
                <textarea name="description" type="text" class="form-control" aria-describedby="describe-description" placeholder="{{t "forms.description_placeholder"}}"></textarea>
            </div>
            {{#if errors.description}}
            <div class="col-md-3 error-block description-error text-danger">
                <span class="glyphicon glyphicon-remove-circle"></span>&nbsp;
                <span class="error">{{errors.description}}</span>
            </div>
            {{/if}}
        </div>
        <div class="row form-group">
            <label class="col-md-3 text-right">{{t "sponsor_engine.label_type_advertising"}} (*)</label>
            <div class="col-md-6">
                <div class="input-group">
                    <ul style="list-style: none; margin: 0; padding: 0;">
                        <li class="text-left">
                            <div class="radio">
                                <label><input type="radio" name="type_advertizing" value="images" />{{t "sponsor_engine.type_images"}}</label>
                            </div>
                        </li>
                        <li class="text-left">
                            <div class="radio">
                                <label><input type="radio" name="type_advertizing" value="videos" />{{t "sponsor_engine.type_videos"}}</label>
                            </div>
                        </li>
                        <li class="text-left">
                            <div class="radio">
                                <label><input type="radio" name="type_advertizing" value="all" />{{t "sponsor_engine.type_both"}}</label>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            {{#if errors.type}}
            <div class="col-md-3 error-block type_advertizing-error text-danger">
                <span class="glyphicon glyphicon-remove-circle"></span>&nbsp;
                <span class="error">{{errors.type}}</span>
            </div>
            {{/if}}
        </div>

        <div class="row">
            <p class="col-md-10 text-left">* {{t "sponsor_engine.legend_asterisk"}}</p>
        </div>

        <div class="row">
            <div class="col-md-offset-3 col-md-3 text-left">
                <button type="submit" id="pacnem-register-sponsor" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;{{t "sponsor_engine.button_register"}}</button>
            </div>
        </div>
        </form>
    </div>
</script>
